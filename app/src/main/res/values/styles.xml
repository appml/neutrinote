    <style name="DatePickerDialogThemeLux" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/dialog_datepicker_color_accent</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:windowBackground">@drawable/date_picker_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DatePickerDialogThemeDay" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/dialog_datepicker_color_accent</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:windowBackground">@drawable/date_picker_background_day</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">@color/color_accent</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="AlertDialogThemeDay" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/color_accent</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:windowBackground">@drawable/dialog_background_day</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fast_zoom_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetLeft">@dimen/button_inset_left</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <style name="AppTextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/button_ripple</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTextInputStyle" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="hintTextColor">@color/text_input_hint</item>
    </style>

    <style name="AppSwitchStyle" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/theme_control_activated</item>
    </style>

    <style name="AppCheckboxStyle" parent="@style/Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/theme_control_activated</item>
    </style>
