    <style name="AppTheme.ColdStart">
        <item name="android:windowBackground">@drawable/cold_start</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorControlNormal">@color/theme_control_normal</item>
        <item name="colorControlActivated">@color/theme_control_activated</item>
        <item name="colorControlHighlight">@color/theme_control_highlight</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionModeCloseDrawable">@drawable/ic_back_vector</item>
        <item name="drawerBackgroundColor">@color/drawer_background</item>
        <item name="drawerTextColor">@color/drawer_text</item>
        <item name="fabBackgroundColor">@color/fab_background</item>
        <item name="android:dropDownListViewStyle">@style/DropDownTheme</item>
        <item name="android:alertDialogTheme">@style/AlertDialogThemeDay</item>
        <item name="materialButtonStyle">@style/AppButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="switchStyle">@style/AppSwitchStyle</item>
        <item name="checkboxStyle">@style/AppCheckboxStyle</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

